/* pages/choose/choose.wxss */

page {
  height: 100%;
}

.fix-top {
  position: fixed;
  top: 0;
}

.subFont {
  color: #fff;
  font-size: 12px;
}

.positionIcon {
  width: 12px;
  height: 12px;
  vertical-align: middle;
  margin-top: -2px;
}

.tabs {
  flex: 1;
  text-align: center;
  padding: 6px 0;
}

.tabs .active {
  color: #09f !important;
  border-bottom: 2px solid #09f;
}

.tabs text {
  color: #000;
  font-size: 14px;
  padding: 5px 0;
}

.verticTabs {
}

.verticTabs .active {
  background-color: #fff !important;
  border-left: 2px solid #09f;
}

.badge {
  float: right;
}

.shopBar {
  position: fixed;
  bottom: 0;
  background-color: #fff;
  width: 100%;
  height: 50px;
  box-shadow: 0px -1px 10px #e0e0e0;
  z-index: 20;
}

.shopCarBody {
  margin-top: -10px;
  margin-left: 12px;
  border-radius: 60px;
  text-align: center;
  width: 50px;
  height: 50px;
  background-color: #fff;
  /* box-shadow: 0px -1px 10px #f5f5f5;  */
  border: 1rpx solid #f1f1f1;
  position: relative;
}

.shopIcon {
  width: 35px;
  height: 35px;
  margin-top: 10px;
}

.shopFoodsBar{
  position:fixed;
  bottom:50px;
  width:100%;
  max-height: 50%;
  background-color: #fff;
  z-index: 15;
  padding:16px 12px;
  box-sizing:border-box;
  display: scroll
}

.shopFoodsMask{
  position: fixed;
  top:0;
  background-color: #000;
  width:100%;
  height:100%;
  opacity: 0.5;
  z-index: 11;
}

.subBtn {
  background-color: #ccc;
  height: 50px;
}

.subBtnActive{
  background-color: orange!important;
}

.subBtn text {
  color: #fff;
  line-height: 50px;
  font-size: 14px;
}

.priceFont {
  font-size: 16px;
  color: orangered;
  font-weight: blod;
}

.shopBadge {
  position: absolute;
  top: 0;
  right: 0;
  background-color: red;
  border-radius: 20px;
  color: #fff;
  width: 25px;
  height:25px;
}

.shopBadge text{
  font-size:14px;
}
.foodBtn{
  width:23px;
  height:23px;
  vertical-align:middle;
}